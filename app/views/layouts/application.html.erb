<!DOCTYPE html>
<html>
  <head>
    <title>Flanger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification bg-success global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="notification bg-danger global-notification">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
      <div class="container-fluid">

        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="navbar-brand">Flanger</h1>
        <% end  %>

        
        <div>
          <% if cart_has_items %>
            <%= link_to cart_path(@cart), class:"navbar-item btn btn-warning" do %>
            <span class="icon is-small">
              <i class="fa fa-shopping-cart"></i>
            </span>
            <span>Cart
              <%= cart_count_over_one %>
              </span>
            <% end %>
          <% end %>
          
          <% if user_signed_in? %>
            <%= link_to 'Sell', new_instrument_path, class: "navbar-item button is-dark" %>

            <div class="navbar-item dropdown">

              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Account
              </a>

              
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li class="dropdown-item">
                  <%= link_to current_user.name, edit_user_registration_path, class:"navbar-item" %>
                </li>
                <li class="dropdown-item">
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"navbar-item" %>
                </li>
              </ul>

              
            </div>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class:"navbar-item mx-1"%>
            <%= link_to "Sign up", new_user_registration_path, class:"navbar-item mx-1"%>
          <% end %>
        </div>

      </div>
    </nav>

  <%= yield(:header) %>

  <div class="container">

    <%= yield %>

  </div>
  </body>
</html>
