<div class="row">
  <div class="col-md-4 offset-md-4">
    <h2 class='text-center'>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: 'Email',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'form-control mb-2' } %>
        <%= f.input :password, label: false, placeholder: 'Password',
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'form-control mb-2' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn btn-success d-grid">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
  </div>
</div>